        </DataGrid>
        <Button Name="BTNsearch"  Content="Search" HorizontalAlignment="Right" Margin="0,119,10,0" VerticalAlignment="Top" Width="75" Click="BTNsearch_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="33,34,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" RenderTransformOrigin="-0.172,0.463" Foreground="White" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="61,30,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="12,65,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" RenderTransformOrigin="-0.172,0.463" Foreground="White" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="61,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Controls:TextBoxHelper.Watermark="Name"/>
